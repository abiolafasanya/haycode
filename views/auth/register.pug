extends ../layout

block content

 main.py-4
  .container
    .row.justify-content-center
      .col-md-8
        .card
          .card-header Register
          .card-body
            form(method='POST' action='/user/register')
              input(type='hidden' name='_token' value='sT2WyiBoQLEGKUi6yrxHiGzRx0MeJJvYsKJjkzZu')
              .form-group.row
                label.col-md-4.col-form-label.text-md-right(for='name') Name
                .col-md-6
                  input#name.form-control(type='text' name='name' value='' required='' autocomplete='name' autofocus='')
              .form-group.row
                label.col-md-4.col-form-label.text-md-right(for='email') E-Mail Address
                .col-md-6
                  input#email.form-control(type='email' name='email' value='' required='' autocomplete='email')
              .form-group.row
                label.col-md-4.col-form-label.text-md-right(for='password') Password
                .col-md-6
                  input#password.form-control(type='password' name='password' required='' autocomplete='new-password')
              .form-group.row
                label.col-md-4.col-form-label.text-md-right(for='password-confirm') Confirm Password
                .col-md-6
                  input#password-confirm.form-control(type='password' name='passwordConfirmation' required='' autocomplete='new-password')
              .form-group.row.mb-0
                .col-md-6.offset-md-4
                  button.btn.btn-primary(type='submit')
                    | Register
